<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E77E23"
    tools:context="es.telefonica.talentum.ledappsecond.MainActivity">

    <ImageView
        android:id="@+id/main_view__icon"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/main_view__name_factory"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Embedded & Optoelectronic Systems Laboratories SL. "
        android:layout_below="@+id/main_view__icon"
        android:fontFamily="sans-serif-condensed"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#E77E23"
        android:background="#FFFFFF"

        />

    <TextView
            android:id="@+id/main_view__phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(+34) 691494242"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:layout_below="@+id/main_view__web"


            />
    <ImageView
            android:id="@+id/main_view__phone_icon"
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_height="35dp"
            android:background="@android:drawable/ic_menu_call"
            android:layout_marginLeft="90dp"
            android:layout_below="@+id/main_view__web"

            />

    <TextView
        android:id="@+id/main_view__web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.eoslab.com"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/main_view__name_factory"

        />
    <ImageView
        android:id="@+id/main_view__web_icon"
        android:layout_width="25dp"
        android:layout_marginTop="30dp"
        android:layout_height="25dp"
        android:layout_marginLeft="60dp"
        android:background="@drawable/mundoimagentransparente"
        android:layout_alignLeft="@+id/main_view__web"
        android:layout_below="@+id/main_view__name_factory"

        />

    <TextView
        android:id="@+id/main_view__correo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="dpino@eoslab.com"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/main_view__phone"

        />
    <ImageView
        android:id="@+id/main_view__correo_icon"
        android:layout_width="25dp"
        android:layout_marginTop="20dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:background="@android:drawable/ic_dialog_email"
        android:layout_alignLeft="@+id/main_view__correo"
        android:layout_below="@+id/main_view__phone"
        />

    <Button
        android:id="@+id/main_view__catalogo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/main_view__correo"
        android:text="CatÃ¡logo"
        android:textColor="#E77E23"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed"
        android:background="@drawable/button_catalogo"
        android:layout_centerInParent="true"
        />

    <ImageButton
        android:id="@+id/main_view__about_us"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/main_view__catalogo"
        android:textColor="#E77E23"
        android:background="@android:drawable/ic_dialog_info"
        android:layout_centerInParent="true"
        />









</RelativeLayout>
